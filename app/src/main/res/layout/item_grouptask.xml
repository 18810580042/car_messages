<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/group_task_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_67"
    android:layout_marginLeft="@dimen/dp_12"
    android:layout_marginTop="@dimen/dp_14"
    android:layout_marginRight="@dimen/dp_12"
    android:background="@drawable/backgrounk_item">

    <ImageView
        android:id="@+id/img_join"
        android:layout_width="@dimen/dp_37"
        android:layout_height="@dimen/dp_37"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_12"
        android:src="@mipmap/join" />

    <TextView
        android:id="@+id/grouptask_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_65"
        android:layout_marginTop="@dimen/dp_16"
        android:text="交接"
        android:textColor="@color/colorblack"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/task_join_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grouptask_join"
        android:layout_marginLeft="@dimen/dp_65"
        android:layout_marginBottom="@dimen/dp_15"
        android:text="交接车辆，系统记录更方便"
        android:textColor="@color/color_888888"
        android:textSize="@dimen/sp_12" />

    <ImageView
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_28"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_10"
        android:src="@drawable/ucrop_more_1x" />
</RelativeLayout>
