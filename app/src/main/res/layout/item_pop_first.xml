<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_125"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/pop_dismiss"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_14"
        android:background="@color/white">

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_14"
            android:layout_centerInParent="true"
            android:src="@mipmap/out_click" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_one"
        android:layout_width="@dimen/dp_160"
        android:layout_height="@dimen/dp_44"
        android:layout_below="@+id/pop_dismiss"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@drawable/background_caritem">

        <View
            android:id="@+id/green_view"
            android:layout_width="@dimen/dp_4"
            android:layout_height="@dimen/dp_44"
            android:background="@drawable/view_green" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_9"
            android:layout_toRightOf="@+id/green_view"
            android:text="运行车辆"
            android:textColor="@color/color_555555"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/green_math"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_8"
            android:text="20"
            android:textColor="@color/color_555555"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_two"
        android:layout_width="@dimen/dp_160"
        android:layout_height="@dimen/dp_44"
        android:layout_below="@+id/pop_dismiss"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_toRightOf="@+id/rl_one"
        android:background="@drawable/background_caritem">

        <View
            android:id="@+id/blue_view"
            android:layout_width="@dimen/dp_4"
            android:layout_height="@dimen/dp_44"
            android:background="@drawable/view_blue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_9"
            android:layout_toRightOf="@+id/blue_view"
            android:text="运行车辆"
            android:textColor="@color/color_555555"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/blue_math"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_8"
            android:text="20"
            android:textColor="@color/color_555555"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_three"
        android:layout_width="@dimen/dp_160"
        android:layout_height="@dimen/dp_44"
        android:layout_below="@+id/rl_one"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/background_caritem">

        <View
            android:id="@+id/red_view"
            android:layout_width="@dimen/dp_4"
            android:layout_height="@dimen/dp_44"
            android:background="@drawable/view_red" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_9"
            android:layout_toRightOf="@+id/red_view"
            android:text="报警车辆数"
            android:textColor="@color/color_555555"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/red_math"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_8"
            android:text="20"
            android:textColor="@color/color_555555"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_four"
        android:layout_width="@dimen/dp_160"
        android:layout_height="@dimen/dp_44"
        android:layout_below="@+id/rl_one"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@+id/rl_one"
        android:background="@drawable/background_caritem">

        <View
            android:id="@+id/white_view"
            android:layout_width="@dimen/dp_4"
            android:layout_height="@dimen/dp_44"
            android:background="@drawable/view_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_9"
            android:layout_toRightOf="@+id/white_view"
            android:text="离线车辆数"
            android:textColor="@color/color_555555"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/white_math"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_8"
            android:text="20"
            android:textColor="@color/color_555555"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>

</RelativeLayout>
