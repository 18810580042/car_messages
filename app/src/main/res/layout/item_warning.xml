<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_9"
    android:layout_marginTop="@dimen/dp_9"
    android:layout_marginRight="@dimen/dp_9"
    android:background="@drawable/backgrounk_item">

    <TextView
        android:id="@+id/warning_carnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_13"
        android:text="@string/car_number"
        android:textColor="@color/colorblack"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/item_warning_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_200"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:text="2019.08.20 16:20:20"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/sp_12" />

    <View
        android:layout_width="@dimen/dp_356"
        android:layout_height="@dimen/dp_0_5"
        android:layout_below="@+id/item_warning_time"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/color_dadada" />

    <TextView
        android:id="@+id/check_weight_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_59"
        android:text="交车人: 张三"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/actual_phonenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_87"
        android:text="交车人电话: 15656565655"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/Overload_site_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_115"
        android:layout_marginBottom="@dimen/dp_15"
        android:text="交车时间: 2019.09.28 08:30:20"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/view_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Overload_site_time"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_14"
        android:text="点击查看详情>>"
        android:textColor="@color/color_00409A" />
</RelativeLayout>
