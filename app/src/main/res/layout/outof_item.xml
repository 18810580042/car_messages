<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backgrounk_item">

    <ImageView
        android:id="@+id/outof_itemImage"
        android:layout_width="@dimen/dp_42"
        android:layout_height="@dimen/dp_42"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_24"
        android:src="@mipmap/space_four" />

    <TextView
        android:id="@+id/item_outof_carnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_58"
        android:layout_marginTop="@dimen/dp_15"
        android:text="冀A81DC1"
        android:textColor="@color/colorblack"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/item_outof_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_toRightOf="@+id/item_outof_carnumber"
        android:text="7696485723"
        android:textColor="@color/colorblack"
        android:textSize="@dimen/sp_15" />

    <ImageView
        android:id="@+id/picture_time"
        android:layout_width="@dimen/dp_11"
        android:layout_height="@dimen/dp_11"
        android:layout_below="@+id/item_outof_number"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_toRightOf="@+id/outof_itemImage"
        android:src="@drawable/space_eight" />

    <TextView
        android:id="@+id/item_outof_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_outof_number"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_toRightOf="@+id/picture_time"
        android:text="2019.04.30  14:20:20"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/sp_13" />

    <ImageView
        android:id="@+id/item_outof_login"
        android:layout_width="@dimen/dp_11"
        android:layout_height="@dimen/dp_11"
        android:layout_below="@+id/item_outof_time"
        android:layout_marginLeft="@dimen/dp_59"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_13"
        android:src="@drawable/sel_qq" />

    <TextView
        android:id="@+id/item_outof_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_outof_time"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_toRightOf="@+id/item_outof_login"
        android:text="河北省石家庄市桥西区红旗大街"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/dp_13" />
</RelativeLayout>
