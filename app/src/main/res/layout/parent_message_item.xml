<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_48"
    android:background="@drawable/barkgroun_shape">

    <ImageView
        android:id="@+id/group_img_year"
        android:layout_width="@dimen/dp_13"
        android:layout_height="@dimen/dp_12"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_6"
        android:src="@mipmap/space_twety_four" />

    <TextView
        android:id="@+id/group_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_toRightOf="@+id/group_img_year"
        android:text="@string/newmessage_text"
        android:textColor="@color/colorblack"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/group_year_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_113"
        android:layout_toRightOf="@+id/group_text"
        android:text="2019.06.23 12:26:30"
        android:textColor="@color/report_color"
        android:textSize="@dimen/sp_12" />
</RelativeLayout>
